<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <SurfaceView
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent" />

    <!-- ASL Letter Display - Enhanced Version -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/letter_background"
        android:padding="16dp"
        android:elevation="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ASL Letter"
            android:textColor="@color/letter_label_color"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:alpha="0.9" />

        <TextView
            android:id="@+id/letterTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/letter_text_color"
            android:textSize="72sp"
            android:textStyle="bold"
            android:typeface="monospace"
            android:text=""
            android:minHeight="100dp"
            android:gravity="center"
            android:shadowColor="#000000"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="5"
            android:textAllCaps="true" />

    </LinearLayout>

    <!-- Status indicator for detection quality -->
    <TextView
        android:id="@+id/statusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="200dp"
        android:textColor="@color/status_text_color"
        android:text=""
        android:textSize="12sp"
        android:background="#66000000"
        android:padding="4dp"
        android:visibility="gone"
        android:textStyle="bold" />

    <!-- Debug/Performance Indicators - Repositioned to bottom -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="72dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/debug_background"
        android:padding="8dp"
        android:elevation="4dp">

        <TextView
            android:id="@+id/delayTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/debug_text_color"
            android:text="0 ms"
            android:textSize="11sp"
            android:drawableStart="@drawable/ic_timer_small"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:textStyle="normal"
            android:alpha="0.9" />

        <View
            android:layout_width="1dp"
            android:layout_height="16dp"
            android:background="@color/debug_divider_color"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/fpsTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/debug_text_color"
            android:text="0 fps"
            android:textSize="11sp"
            android:drawableStart="@drawable/ic_fps_small"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:textStyle="normal"
            android:alpha="0.9" />

    </LinearLayout>

    <!-- Control buttons at bottom -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="16dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="3">

        <Button
            android:id="@+id/connectButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:text="Conectar"
            android:singleLine="true"
            android:maxLines="1"
            android:ellipsize="none"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="8sp"
            android:autoSizeMaxTextSize="12sp"
            android:autoSizeStepGranularity="1sp"
            android:backgroundTint="@color/connect_button_color" />

        <Button
            android:id="@+id/disconnectButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:text="Desconectar"
            android:singleLine="true"
            android:maxLines="1"
            android:ellipsize="none"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="8sp"
            android:autoSizeMaxTextSize="12sp"
            android:autoSizeStepGranularity="1sp"
            android:backgroundTint="@color/disconnect_button_color" />

        <Button
            android:id="@+id/switchCameraButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:text="CÃ¡mara"
            android:singleLine="true"
            android:maxLines="1"
            android:ellipsize="none"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="8sp"
            android:autoSizeMaxTextSize="12sp"
            android:autoSizeStepGranularity="1sp"
            android:backgroundTint="@color/camera_button_color" />
    </LinearLayout>
</FrameLayout>
