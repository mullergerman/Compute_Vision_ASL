<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    
    <!-- Background with gradient for better visual appeal -->
    <gradient
        android:startColor="#E6000000"
        android:endColor="#B3000000"
        android:angle="90" />
    
    <!-- Rounded corners -->
    <corners android:radius="16dp" />
    
    <!-- Subtle border for definition -->
    <stroke
        android:width="2dp"
        android:color="@color/letter_border" />
    
    <!-- Padding for inner content -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
        
</shape>
